{# templates/author/article_detail.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <title>Detail článku</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
    .btn{
    background-color: #BE0000;
    color: white;
    border-color: #BE0000;
    }
    .btn:hover{
    background-color: #BE0000;
    color: white;
    border-color: #BE0000;
    }

    .card{
    border-color: #DE7D7D;
    border-radius: 45px;
    }

    .card-body{
    background-color: #DE7D7D;
    color: white;
    border-radius: 45px;
    }
    </style>
</head>
<body>
<div class="container mt-5">
    <h1>Detail článku</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{ Clanek.nazev }}</h5>
            <p class="card-text">Datum odeslání: {{ VerzeClanku.datum_nahrani|date('Y-m-d') }}</p>
            <p class="card-text">Stav: {{ Clanek.stav_redakce }}</p>
            <!-- Další informace o článku -->
        </div>
    </div>
    <a href="{{ path('meclanky') }}" class="btn btn-primary mt-3">Zpět na přehled článků</a>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>