{# templates/article/index.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <title>Seznam článků</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>

        .btn{
            background-color: #BE0000;
            color: white;
            border-color: #BE0000;
        }
        .btn:hover{
            background-color: #BE0000;
            color: white;
            border-color: #BE0000;
        }

        .card{
            border-color: #DE7D7D;
            border-radius: 45px;
        }

        .card-body{
            background-color: #DE7D7D;
            color: white;
            border-radius: 45px;
        }
        .text{
            background-color: #BE0000;
            color: white;
            border-radius: 25px;
            padding: 10px;
        }

    </style>
</head>
<body>
<div class="container">
    <h1 class="mt-5">Seznam článků</h1>

    <form method="get" action="{{ path('article_index') }}" class="mb-3">
        <div class="form-group">
            <label for="search" class="text">Vyhledat: </label>
            <input type="text" id="search" name="search" class="form-control" value="{{ app.request.query.get('search') }}">
        <button type="submit" class="btn btn-primary mt-2">Hledat</button>
</div>
    </form>

    <div class="row">
        {% for Clanek in Clanek %}
            <div class="col-md-3 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ Clanek.nazev }}</h5>
                        <p class="card-text">{{ Clanek.Autor }} - {{ VerzeClanku.datum_nahrani|date('Y-m-d') }}</p>
                        <p class="card-text">{{ Clanek.popis }}</p>
                        <a href="{{ path('article_show', {'id': Clanek.id}) }}" class="btn btn-primary">Detail</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>