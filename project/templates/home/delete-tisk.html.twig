{% extends 'base.html.twig' %}

{% block body %}

    <div class="row justify-content-center">
        <div class="col-auto">
        <table class="table table-bordered">
        <thead>
            <tr>
            <th scope="col">Id</th>
            <th scope="col">Datum</th>
            <th scope="col">Kapacita</th>
            </tr>
        </thead>
        <tbody>
            <tr>
            <th scope="row"> {{ tisk.getId() }} </th> 
            <td> {{ tisk.getDatum() }} </td>
            <td> {{ tisk.getKapacita() }}</td>
            </tr>
        </tbody>
        </table>
        <br>
        <form action="{{ path('app_delete_tisk', {'id': tisk.getId() }) }}" method="post">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tisk.getId() ) }}">
            <button type="submit" class="btn btn-primary">Delete</button>    
        </form>
        <br>
            <button class="btn btn-primary" onclick="window.history.back();">Go Back</button>
        </div>
    </div>

{% endblock %}

