{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <table class="table table-striped table-hover" style="margin-left: auto; margin-right: auto;" >
        <thead class="shadow-sm">
        <tr>
            <th>Nazev clanku</th>
            <th>Autor</th>
            <th>Datum vydani</th>
            <th>Clanek</th>
        </tr>
        </thead>
        <tbody>
        {% for i in 0..(clanky|length - 1) %}
            <tr>
                <td> {{ clanky[i].getNazevClanku() }} </td>
                <td> {{ clanky[i].getUser().getFirstName() }} {{ clanky[i].getUser().getLastName() }}</td>
                <td> {{ datumy[i] }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_download', {'clanek': clanky[i].getId(), 'verze': verze_clanku[i].getId(), 'soubor': soubory[i] }) }}">Stahnout</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
