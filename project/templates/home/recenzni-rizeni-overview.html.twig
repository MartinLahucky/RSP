{% extends 'base.html.twig' %}

{% block title %}Prehled recenznich rizeni{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <table class="table table-striped table-hover" style="margin-left: auto; margin-right: auto;" >
        <thead class="shadow-sm">
         <tr>
            <th>Recenzni rizeni</th>
           <th>Od</th>
           <th>Do</th>
             <th>Smazat</th>
         </tr>
         </thead>
         <tbody>
         {% if recenzni_rizeni == null %}
             Zadne recenzni rizeni k zobrazeni
         {% else %}
             {% for i in 0..(recenzni_rizeni|length - 1) %}
             <tr>
                 <td> {{ (i + 1) }} </td>
                <td> {{ recenzni_rizeni[i].getOd() }} </td>
               <td> {{ recenzni_rizeni[i].getDo() }}</td>
               <td>
                    <a class="btn btn-primary" href="{{ path('app_delete_recenzni_rizeni', {'id': recenzni_rizeni[i].getId() }) }}">Smazat</a>
               </td>
             </tr>
            {% endfor %}
         {% endif %}
        </tbody>
    </table>
</div>
{% endblock %}
