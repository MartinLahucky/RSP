{% extends 'base.html.twig' %}

{% block title %}Prehled tisku{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a class="btn btn-primary" href="{{ path('app_create_tisk') }}">Pridat novy tisk</a><br/><br/>
    <table class="table table-striped table-hover" style="margin-left: auto; margin-right: auto;" >
        <thead class="shadow-sm">
         <tr>
           <th>Tisk</th>
           <th>Datum</th>
           <th>Kapacita</th>
             <th>Smazat</th>
         </tr> 
         </thead>
         <tbody>
         {% if tisky == null %}
             Zadne tisky k zobrazeni
         {% else %}
             {% for i in 0..(tisky|length - 1) %}
             <tr>
                 <td> {{ (i + 1) }} </td>
                <td> {{ tisky[i].getDatum() }} </td>
               <td> {{ tisky[i].getKapacita() }}</td>
               <td>
                    <a class="btn btn-primary" href="{{ path('app_delete_tisk', {'id': tisky[i].getId() }) }}">Smazat</a>
               </td>
             </tr>
            {% endfor %}
         {% endif %}
        </tbody>
    </table>
</div>
{% endblock %}
