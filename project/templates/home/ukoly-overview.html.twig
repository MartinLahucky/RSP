{% extends 'base.html.twig' %}

{% block title %}Prehled recenznich rizeni{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Prehled clanku pro recenzi</h1>
    <a class="btn btn-primary" href="{{ path('app_create_task') }}">Zadat novy ukol</a><br/><br/>
    <table class="table table-striped table-hover" style="margin-left: auto; margin-right: auto;" >
        <thead class="shadow-sm">
         <tr>
            <th>Ukol</th>
            <th>Deadline</th>
            <th>Nazev clanku</th>
             <th>Stav clanku</th>
             <th>Clanek</th>
            <th>Smazat</th>
         </tr>
         </thead>
         <tbody>
         {% if ukoly == null or clanky == null %}
             Zadne ukoly
         {% else %}
             {% for i in 0..(ukoly|length - 1) %}
             <tr>
                 <td> {{ (i + 1) }} </td>
                <td> {{ ukoly[i].getDeadline() }} </td>
               <td> {{ ukoly[i].getClanek().getNazevClanku() }}</td>
                 <td>{{ stavy[i] }}</td>
                 <td>
                     <a class="btn btn-primary" href="{{ path('app_author_article_detail', {'clanek_id': clanky[i].getId() }) }}">Zobrazit</a>
                 </td>
               <td>
                    <a class="btn btn-primary" href="{{ path('app_delete_ukol', {'id': ukoly[i].getId() }) }}">Smazat</a>
               </td>
             </tr>
            {% endfor %}
         {% endif %}
        </tbody>
    </table>
</div>
{% endblock %}
