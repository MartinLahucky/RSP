{% extends 'base.html.twig' %}

{% block title %} Informace o verzi clanku {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {# Clanek: <a href="{{ path('app_download_file')}}">{{ clanek_verze.getSouborClanek() }}</a><br/> #}
    <div>
        Clanek: <a href="#">{{ clanek_verze.getSouborClanek() }}</a><br/>
        Datum: {{ clanek_verze.getDatumNahrani() }}<br/>
    </div><br/>

    <table class="table table-striped table-hover" style="margin-left: auto; margin-right: auto;" >
        <thead class="shadow-sm">
        <tr>
            <th>Uzivatel</th>
            <th>Komentar</th>
        </tr>
        </thead>
         <tbody>
         {% for komentar in komentare %}
         <tr>
            <td> {{ komentar.getUser().getFirstName() }} {{ komentar.getUser().getLastName() }}</td>
            <td> {{ komentar.getText() }} </td>
         </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
