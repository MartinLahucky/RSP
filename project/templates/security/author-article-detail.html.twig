{% extends 'base.html.twig' %}

{% block title %} Detail clanku {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
  <h4>Verze článku : <b>{{clanek_verze[0].getClanek().getNazevClanku()}}</b></h4>
    <table class="table table-striped table-hover" style="margin-left: auto; margin-right: auto;" >
        <thead class="shadow-sm">
         <tr>
           <th>Verze</th>
           <th>Datum</th>
           <th>Detail</th>
         </tr> 
         </thead>
         <tbody>
         {% for i in 0..(clanek_verze|length - 1) %}
         <tr>
            <td> {{ (i + 1) }} </td>
            <td> {{ clanek_verze[i].getDatumNahrani() }} </td>
           <td>
                <a class="btn btn-primary" href="{{ path('app_article_comments', {'verze_clanku_id': clanek_verze[i].getId() }) }}">Zobrazit</a>
           </td>
         </tr>
        {% endfor %}
        </tbody>
        </table>

</div>
{% endblock %}
