{% extends 'base.html.twig' %}

{% block title %} Vytvorit namitku {% endblock %}

{% block body %}
    <style>
        b{
           color:white;
        }
        textarea {
            width: 80%;
            min-height: 250px;
            padding: 0.5em;
            background-color: white;
            border-radius:25px;
        }

        .send{
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        }
        .send:hover{
            background-color:rgb(200, 243, 188 );
            transition: all 0.5s ease;
            border:none;
            box-shadow: rgba(0, 0, 0, 0.3) 0px 19px 38px, rgba(0, 0, 0, 0.22) 0px 15px 12px;
            transform: scale(1.1);
        }
    </style>

    <div class="container">
  <div class="row justify-content-center m-3">
    <div class="col-xs-4 login">
          <h1 class="p-3 headingLogin text-center m-3">Námitka ke článku</h1>
          {{ form_start(form) }}
            <div class="form-group mt-5 white">
              <b>Název článku: </b><br/>
              <h1 class="white">{{ clanek.getNazevClanku() }}</h1><br/>
            </div>
            <div class="form-group mt-5 white">
            <b>Námitka:</b><br/>
            <div class="namitka mx-auto">
                {{ form_widget(form.text_namitky, {'attr': {'class': 'text-center mx-auto'}}) }}
            </div>
            <div class="form-group mt-5">
              <button type="submit" class="btn btn-light m-3 send">Odeslat</button>
              <a href="javascript:history.back()" class="btn btn-light back">Zpět</a>
                {{ form_end(form) }}

            </div>
            </div>
    </div>
  </div>
</div>
{% endblock %}

