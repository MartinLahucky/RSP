{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-4 login m-3">
          <h1 class="p-3 headingLogin text-center m-3">Role</h1>
    {{ form_start(form) }}
    <div class="form-group">
    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'col-form-label col-sm-2 white text-center'}}) }}
    {{ form_widget(form.email, {'attr': {'class': 'form-control inputLogin w-50 text-center mx-auto'}}) }}
    </div>
    <div class="form-group">
    {{ form_label(form.firstname, 'Jméno', {'label_attr': {'class': 'col-form-label col-sm-2 white text-center'}}) }}
    {{ form_widget(form.firstname, {'attr': {'class': 'form-control inputLogin w-50 text-center mx-auto'}}) }}
    </div>
    <div class="form-group">
    {{ form_label(form.lastname, 'Příjmení', {'label_attr': {'class': 'col-form-label col-sm-2 white text-center'}}) }}
    {{ form_widget(form.lastname, {'attr': {'class': 'form-control inputLogin w-50 text-center mx-auto'}}) }}
    </div>
    <div class="form-group">
    {{ form_label(form.password, 'Heslo', {'label_attr': {'class': 'col-form-label col-sm-2 white text-center'}}) }}
    {{ form_widget(form.password, {'attr': {'class': 'form-control inputLogin text-center w-50 mx-auto'}}) }}
    </div>
    <div class="form-group">
    <button type="submit" class="btn btn-primary btn-light p-3 m-3 w-25">Save</button>
    </div>
    {{ form_end(form) }}

            {% if app.user %}
                <div class="form-group">
                <a href="{{ path('app_logout')}}" class="btn btn-primary btn-light p-1 m-1 w-25">Logout</a>
                </div>
            {% else %}
                <div class="form-group">
                <a href="{{ path('app_login')}}" class="btn btn-primary btn-light p-1 m-1 w-25">Login</a>
                </div>
            {% endif %}
    </div>
  </div>
</div>

{% endblock %}

