{% extends 'base.html.twig' %}

{% block title %} Posudek {% endblock %}

{% block body %}
  <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    textarea {
      width: 100%;
      height: 30vh;
    }
  </style>

<div class="example-wrapper">
  <b style="font-size: 1.25em;">Aktualnost:</b> {{ posudek.getAktualnost() }}<br/>
  <b style="font-size: 1.25em;">Originalita:</b> {{ posudek.getOriginalita() }}<br/>
  <b style="font-size: 1.25em;">Odborna uroven:</b> {{ posudek.getOdbornaUroven() }}<br/>
  <b style="font-size: 1.25em;">Jazykova uroven:</b> {{ posudek.getJazykovaUroven() }}<br/>
  <b style="font-size: 1.25em;">Posudek: </b><a href="{{ path('app_download', {'slozka': 'posudky', 'posudek_id': posudek.getId(), 'posudek_soubor': posudek.getPosudekSoubor() }) }}">{{ posudek.getPosudekSoubor() }}</a><br/>
</div>
{% endblock %}

