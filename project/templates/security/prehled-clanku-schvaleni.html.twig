{% extends 'base.html.twig' %}

{% block title %} Prehled clanku na schvaleni {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h2>PÅ™ehled clanku na schvaleni</h2>
    {% if clanky == null %}
        <br>
        Zadne clanky na schvaleni
    {% else %}
        <table class="table table-striped table-hover" style="margin-left: auto; margin-right: auto;" >
            <thead class="shadow-sm">
             <tr>
                 <th>Clanek</th>
               <th>Nazev</th>
               <th>Zobrazit clanek</th>
               <th>Prijat clanek</th>
                 <th>Zamitnout clanek</th>
             </tr>
             </thead>
             <tbody>
             {% for i in 0..(clanky|length - 1) %}
             <tr>
                 <td>{{ (i + 1) }}</td>
                <td> {{ clanky[i].getNazevClanku() }} </td>
               <td>
                    <a class="btn btn-primary" href="{{ path('app_author_article_detail', {'clanek_id': clanky[i].getId() }) }}">Zobrazit</a>
               </td>
               <td>
                <a class="btn btn-primary" href="{{ path('app_zmenit_stav_clanku',
                    {'clanek_id': clanky[i].getId(), 'stav_autor': 'PRIJATO', 'stav_redakce': 'PRIJATO' }) }}">Prijat</a>
               </td>
                 <td>
                     <a class="btn btn-primary" href="{{ path('app_zmenit_stav_clanku',
                         {'clanek_id': clanky[i].getId(), 'stav_autor': 'ZAMITNUTO', 'stav_redakce': 'ZAMITNUTO' }) }}">Zamitnout</a>
                 </td>
             </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}
