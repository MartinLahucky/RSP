{% extends 'base.html.twig' %}

{% block title %} Namitka {% endblock %}

{% block body %}

<style>
b{
    color:white;
}

.namitka{
    min-height:50px;
    width:80%;
    background-color: white;
    border-radius:25px;
    padding:5px;
    word-break: break-all;
}
</style>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-4 login m-3">
          <h1 class="p-3 headingLogin text-center m-3">Námitka ke článku</h1>
            <div class="form-group mt-5 white">
              <b>Název článku: </b><br/>
              {{ namitka.getClanek().getNazevClanku() }}<br/>
            </div>
            <div class="form-group mt-5 white">
              <b>Autor: </b><br/>
              {{ namitka.getClanek().getUser().getFirstName() }} {{ namitka.getClanek().getUser().getLastName() }} <i class="white">({{ namitka.getClanek().getUser().getEmail() }})</i><br/>
            </div>
            <div class="form-group mt-5 white">
              <b>Datum: </b><br/>
              {{ namitka.getDatum() }}<br/>
            </div>
            <div class="form-group mt-5 white">
            <b>Námitka:</b><br/>
            <div class="namitka mx-auto">
                {{ namitka.getTextNamitky() }}
            </div>
            <div class="form-group">
              <a href="javascript:history.back()" class="btn btn-light back m-3">Zpět</a>
            </div>
            </div>
    </div>
  </div>
</div>
{% endblock %}
