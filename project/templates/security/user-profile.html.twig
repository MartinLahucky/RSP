{% extends 'base.html.twig' %}

{% block title %} Uživatelksý profil {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <b>Jméno: </b>{{ user.getFirstName()}} {{user.getLastName()}}<br/>
    <b>Email: </b>{{ user.getEmail}}<br/>
    <div><b>Role</b>
    {% for role in user.getRoles() %}
    <span class="rad-25 p-2 bg-red white m-1">{{role}}</span>
    {% endfor %}
    </div>
    <div class="mt-auto d-flex justify-content-between">
        <a href="{{ path('app_edit_user_profile') }}" class="card-link btn btn-primary w-50 bg-red-soft">Edit</a>
    </div>
    <br/><br/>
</div>
{% endblock %}
